<h1>BlackJack</h1>


<h3> Welcome <%= session[:username] %> to Web BlackJack</h3>
<div class='well'>
	<h3><%= session[:username] %></h3> 
	<h4>Your Cards are:</h4>
		<% session[:player_cards].each do |card| %>
			<%= card_image(card) %>
		<% end %>
	<h5>Your Card Total: <%=hand_value(session[:player_cards]) %></h5>
</div>	

	<br/>

<div class='well'>
	<h3>Dealer</h3>
	<h4>Dealer Cards are:</h4>
		<% session[:dealer_cards].each do |card| %>
			<%= card_image(card) %>
		<% end %>
	<h5>Dealer Card Total: <%=hand_value(session[:dealer_cards]) %></h5>

  <% if @dealer_turn_to_play %>
    <h5>Dealer has <%= hand_value(session[:dealer_cards]) %> and will hit.</h5>
    <form action="/dealer_turn" method="post">
      <input type="submit" value="See dealer's next card" class="btn btn-primary dealer_turn">
    </form>
  <% end %>
</div>

<br/>

<% if @show_hit_and_stay %>
	<form id='hit_button' action='/hit' method='post'>
	 <input type='submit' class='btn btn-success' value='Hit'/>
	</form>

	<form id='stay_button' action='/stay' method='post'>
	 <input type='submit' class='btn btn-warning' value='Stay'/>
	</form>
<% end %>